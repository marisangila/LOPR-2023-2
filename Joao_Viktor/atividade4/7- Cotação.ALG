Algoritmo "Cotação"

Var
conversao, cotacaoDolar, dolar: real


Inicio
   escreval("--- CÁLCULO DE COTAÇÃO ---")
   escreval()
   escreva("Digite a cotação atual do dólar: ")
   leia(cotacaoDolar)
   escreva("Digite quantos dólares você possui: ")
   leia(dolar)
   escreval
   conversao <- dolar / cotacaoDolar
   escreval("A conversão resulta em",conversao:2:2," dólares")

Fimalgoritmo
