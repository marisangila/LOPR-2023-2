Algoritmo "..."

Var
   numero: inteiro
   antecessor: inteiro
   sucessor: inteiro
Inicio
   escreva ("Informe um número inteiro")
   leia(numero)
   antecessor <- numero - 1
   sucessor <- numero + 1
   escreva("O número é", numero)
   escreva (" o antecessor é", antecessor)
   escreva (" e o sucessor é",sucessor)

Fimalgoritmo