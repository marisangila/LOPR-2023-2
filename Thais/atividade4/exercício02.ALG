Algoritmo "semnome"

Var
  numeroA: inteiro
  numeroAntecessor: inteiro
  numeroSucessor: inteiro
Inicio
   escreval ("Digite um número inteiro:")
   leia (numeroA)
   numeroAntecessor <- numeroA - 1
   numeroSucessor <- numeroA + 1
   escreval ("O número digitado é" , numeroA, "Seu antecessor é" , numeroAntecessor, "e seu sucessor é" , numeroSucessor)
Fimalgoritmo